@using AspNetCoreTemplate.Web.ViewModels.Minor
@model EditMinorViewModel


<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
    <h1 class="text-center">Edit minor</h1>

    <div>

        <label asp-for="Name"></label>
        <input asp-for="Name" class="text-danger">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" />
        <input asp-for="FilePdf" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile"></label>

    </div>
    <button type="submit" class="btn btn-dark">Edit minor</button>
</form>